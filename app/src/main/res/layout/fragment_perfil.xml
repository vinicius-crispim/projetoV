                            android:id="@+id/txtSeusDados"
                            android:layout_width="match_parent"
                            android:layout_height="85dp"
                            android:layout_marginBottom="5dp"
                            android:background="#6E6E6E"
                            android:fontFamily="monospace"
                            android:gravity="center_horizontal|center_vertical"
                            android:text="SEUS DADOS"
                            android:textColor="@color/black"
                            android:textSize="34sp" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Nome"

                                app:hintTextColor="@color/black"
                                app:startIconContentDescription="Imagem representando perfil"
                                app:startIconDrawable="@drawable/perfil">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/txtSeusDados_Nome"
                                    android:layout_width="350dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="20dp"
                                    android:background="#6E6E6E"
                                    android:enabled="false"
                                    android:textColor="#CBFFFFFF"
                                    android:textSize="18sp" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Matricula"

                                app:hintTextColor="@color/black"
                                app:startIconContentDescription="Imagem representando matricula"
                                app:startIconDrawable="@drawable/matricula">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/txtSeusDados_Matricula"
