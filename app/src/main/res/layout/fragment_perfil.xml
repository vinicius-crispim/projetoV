                                    android:layout_height="wrap_content"
                                    android:hint="Faltam"

                                    app:hintTextColor="@color/black"
                                    app:startIconContentDescription="Imagem representando horas faltando"
                                    app:startIconDrawable="@drawable/alarm_off">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/txtSeusDados_HorasFaltando"
                                        android:layout_width="154dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="right"
                                        android:layout_marginTop="25dp"
                                        android:layout_marginRight="28dp"
                                        android:background="#6E6E6E"
                                        android:enabled="false"
                                        android:textColor="#CBFFFFFF"
                                        android:textSize="20sp"
                                        tools:ignore="DuplicateClickableBoundsCheck" />
                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Suas horas"

                                    app:hintTextColor="@color/black"
                                    app:startIconContentDescription="Imagem representando horas feitas"
                                    app:startIconDrawable="@drawable/alarm_on">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/txtSeusDados_Horas"
                                        android:layout_width="183dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="25dp"
                                        android:layout_marginRight="85dp"
                                        android:background="#6E6E6E"
                                        android:enabled="false"
                                        android:textColor="#CBFFFFFF"
                                        android:textSize="20sp"
                                        tools:ignore="DuplicateClickableBoundsCheck" />
                                </com.google.android.material.textfield.TextInputLayout>
                            </RelativeLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Horas necessÃ¡rias"

