<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud"
    android:foregroundTint="#000000"
    tools:context=".view.RegistrarActivity">

    <ScrollView
        android:id="@+id/scrCadastro"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        android:scrollbarSize="6dp"
        android:scrollbarStyle="insideInset"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="264dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:contentDescription="TODO"
                app:srcCompat="@drawable/desconto" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="308dp"
                android:layout_height="72dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="@string/informe_os_seguintes_dados_para_concluir_o_seu_cadastro"
                android:textAlignment="gravity"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txtTituloLinha"
                android:layout_width="299dp"
                android:layout_height="57dp"
                android:layout_marginBottom="30dp"
                android:background="@color/white"
                android:ems="10"
                android:hint=" Insira seu nome"
                android:inputType="text"
                android:shadowColor="#FFFFFF"
                android:text=""
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="20sp" />

            <EditText

                android:id="@+id/txtMatricula"
                android:layout_width="299dp"
                android:layout_height="57dp"
                android:layout_marginBottom="30dp"
                android:background="@color/white"
                android:ems="10"
                android:hint=" Insira sua matricula"
                android:inputType="number"
                android:shadowColor="#FFFFFF"
                android:text=""
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/txtSenhaCadastro"
                android:layout_width="299dp"
                android:layout_height="57dp"
                android:layout_marginBottom="30dp"
                android:background="@color/white"
                android:ems="10"
                android:hint=" Insira sua senha"
                android:inputType="text"
                android:shadowColor="#FFFFFF"
                android:text=""
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/txtConfirmaSenha"
                android:layout_width="299dp"
                android:layout_height="57dp"
                android:layout_marginBottom="30dp"
                android:background="@color/white"
                android:ems="10"
                android:hint=" Repita sua senha"
                android:inputType="textPassword"
                android:shadowColor="#FFFFFF"
                android:text=""
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/txtEmailCadastro"
                android:layout_width="299dp"
                android:layout_height="57dp"
                android:layout_marginBottom="30dp"
                android:background="@color/white"
                android:ems="10"
                android:hint=" Insira seu e-mail"
                android:inputType="text"
                android:shadowColor="#FFFFFF"
                android:text=""
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spnCursos"
                android:layout_width="299dp"
                android:layout_height="57dp"
                android:layout_marginBottom="30dp"
                android:contentDescription="Spinner dos cursos"
                android:theme="@style/spinnerpersolnalizado" />

            <AutoCompleteTextView
                android:id="@+id/txtautocursos"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:hint="Informe seu curso"
                android:completionThreshold="1"
                android:textColor="@color/black"
                android:layout_marginBottom="30dp"
                android:background="@color/black"
                android:backgroundTint="@color/white"
                android:textColorHint="@color/black"
                android:completionHint="Informe seu curso"
                android:shadowColor="@color/white" />

            <EditText
                android:id="@+id/txtCPF"
                android:layout_width="299dp"
                android:layout_height="57dp"
                android:layout_marginBottom="30dp"
                android:background="@color/white"
                android:ems="10"
                android:hint="Insira seu CPF"
                android:inputType="text"
                android:shadowColor="#FFFFFF"
                android:text=""
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editTextPhone"
                android:layout_width="299dp"
                android:layout_height="57dp"
                android:background="@color/white"
                android:ems="10"
                android:hint="Insira seu telefone"
                android:inputType="text"
                android:shadowColor="#FFFFFF"
                android:text=""
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnCadastrarAluno"
                android:layout_width="299dp"
                android:layout_height="58dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="15dp"
                android:backgroundTint="#4CAF50"
                android:text="Cadastrar"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button"
                android:visibility="invisible" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>