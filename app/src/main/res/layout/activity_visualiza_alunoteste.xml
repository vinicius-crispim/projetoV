<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.VisualizaAlunoActivity"
    android:background="@color/backgroud">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation ="vertical" >
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"

            android:layout_marginEnd="0dp"
            android:backgroundTint="@color/backgroud"
            app:rippleColor="#FFFFFF"
            app:strokeColor="@color/black"
            app:strokeWidth="0dp"
            tools:ignore="DuplicateIds">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="0dp"
                android:gravity="center"
                android:orientation="vertical">

                <!--<com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txtSeusDados_Nome"
                    android:layout_width="299dp"
                    android:layout_height="55dp"
                    android:backgroundTint="@color/black"
                    android:hint="Nome"
                    app:boxBackgroundColor="@color/black"
                    app:hintTextColor="@color/black"
                    app:itemBackground="@color/black"
                    app:startIconContentDescription="Imagem representando perfil"
                    app:startIconDrawable="@drawable/perfil"></com.google.android.material.textfield.TextInputLayout>
         -->       <TextView
                android:id="@+id/txtPesquisaAlunoTitulo"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_marginBottom="5dp"
                android:background="#6E6E6E"
                android:fontFamily="monospace"
                android:gravity="center_horizontal|center_vertical"
                android:text="Dados do Aluno"
                android:textColor="@color/black"
                android:textSize="34sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nome"

                    app:hintTextColor="@color/black"
                    app:startIconContentDescription="Imagem representando perfil"
                    app:startIconDrawable="@drawable/perfil">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtPesquisaAlunoNome"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:background="#6E6E6E"
                        android:textColor="#CBFFFFFF"
                        android:enabled="false"
                        android:textSize="18sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Matricula"

                    app:hintTextColor="@color/black"
                    app:startIconContentDescription="Imagem representando matricula"
                    app:startIconDrawable="@drawable/matricula">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtPesquisaAlunoMatricula"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:background="#6E6E6E"
                        android:textColor="#CBFFFFFF"
                        android:enabled="false"
                        android:textSize="18sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Telefone"

                    app:hintTextColor="@color/black"
                    app:startIconContentDescription="Imagem representando matricula"
                    app:startIconDrawable="@drawable/telefone">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtPesquisaAlunoTelefone"
                        android:layout_width="350dp"
                        android:enabled="false"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:background="#6E6E6E"
                        android:textColor="#CBFFFFFF"
                        android:textSize="18sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="CPF"

                    app:hintTextColor="@color/black"
                    app:startIconContentDescription="Imagem representando CPF"
                    app:startIconDrawable="@drawable/matricula">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtPesquisaAlunoCPF"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:enabled="false"
                        android:layout_marginTop="30dp"
                        android:background="#6E6E6E"
                        android:textColor="#CBFFFFFF"
                        android:textSize="18sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"

                    app:hintTextColor="@color/black"
                    app:startIconContentDescription="Imagem representando CPF"
                    app:startIconDrawable="@drawable/email">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtPesquisaAlunoEmail"
                        android:enabled="false"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:background="#6E6E6E"
                        android:textColor="#CBFFFFFF"
                        android:textSize="18sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Curso"

                    app:hintTextColor="@color/black"
                    app:startIconContentDescription="Imagem representando Curso"
                    app:startIconDrawable="@drawable/curso">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtPesquisaAlunoCurso"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:enabled="false"
                        android:background="#6E6E6E"
                        android:textColor="#CBFFFFFF"
                        android:textSize="18sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Coordenador"

                    app:hintTextColor="@color/black"
                    app:startIconContentDescription="Imagem representando coordenador"
                    app:startIconDrawable="@drawable/coordenadorperfil">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtPesquisaAlunoCoordenador"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:enabled="false"
                        android:background="#6E6E6E"
                        android:textColor="#CBFFFFFF"
                        android:textSize="18sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Faltam"

                        app:hintTextColor="@color/black"
                        app:startIconContentDescription="Imagem representando horas faltando"
                        app:startIconDrawable="@drawable/alarm_off">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txtPesquisaAlunoHorasFaltando"
                            android:layout_width="154dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginTop="25dp"
                            android:layout_marginRight="28dp"
                            android:background="#6E6E6E"
                            android:enabled="false"
                            android:textColor="#CBFFFFFF"
                            android:textSize="20sp"
                            tools:ignore="DuplicateClickableBoundsCheck" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Horas feitas"

                        app:hintTextColor="@color/black"
                        app:startIconContentDescription="Imagem representando horas feitas"
                        app:startIconDrawable="@drawable/alarm_on">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txtPesquisaAlunoHorasFeitas"
                            android:layout_width="183dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="25dp"
                            android:layout_marginRight="85dp"
                            android:background="#6E6E6E"
                            android:enabled="false"
                            android:textColor="#CBFFFFFF"
                            android:textSize="20sp"
                            tools:ignore="DuplicateClickableBoundsCheck" />
                    </com.google.android.material.textfield.TextInputLayout>
                </RelativeLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Horas necessárias"

                    app:hintTextColor="@color/black"
                    app:startIconContentDescription="Imagem de um relogio"
                    app:startIconDrawable="@drawable/timer">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtPesquisaAlunoHorasNecessarias"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:background="#6E6E6E"
                        android:enabled="false"
                        android:textColor="#CBFFFFFF"
                        android:textSize="18sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!--<EditText
                    android:id="@+id/txtSeusDados_Telefone"
                    android:layout_width="299dp"
                    android:layout_height="55dp"
                    android:layout_marginBottom="30sp"
                    android:background="@color/white"
                    android:ems="10"
                    android:hint="Telefone:"
                    android:inputType="text"
                    android:text="Telefone:"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />-->


            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/txtSeusDados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:background="#6E6E6E"
            android:fontFamily="monospace"
            android:gravity="center_horizontal|center_vertical"
            android:text="Histórico de Atividades"
            android:textColor="@color/black"
            android:textSize="34sp" />
        <ListView
            android:id="@+id/lista_teste"
            android:layout_width="match_parent"
            android:layout_height="750dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />
    </LinearLayout>
</ScrollView>